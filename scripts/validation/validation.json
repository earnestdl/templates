{
    "global": {
        "APP_NAME": {
            "required": true,
            "type": "string"
        },
        "APP_PLATFORM":  {
            "required": true,
            "type": "string"
        },
        "APP_REGISTRY_URL": {
            "required": true,
            "type": "string",
            "default": "myregistry.com"
        }
    },
    "build": {
        "APP_BUILD_PATH":  {
            "required": true,
            "type": "string"
        },
        "APP_BUILD_CONTEXT":  {
            "required": true,
            "type": "string",
            "stage_types": ["container"]
        },
        "APP_BUILD_TARGET":  {
            "required": true,
            "type": "string",
            "stage_types": ["container"]
        },
        "APP_BUILD_ARGS":  {
            "required": true,
            "type": "string"
        }
    },
    "deploy": {
        "APP_DEPLOY_ENV": {
            "required": true,
            "type": "string"
        },
        "APP_RUNTIME_ARGS": {
            "required": true,
            "default": "default_test",
            "type": "string"
        },
        "APP_DEPLOY_REGIONS": {
            "required": false,
            "type": "array",
            "stage_types": ["openshift"]
        },
        "OPENSHIFT_PREFIX": {
            "required": true,
            "type": "string",
            "stage_types": ["openshift"]
        },
        "OPENSHIFT_PROJECT": {
            "required": true,
            "type": "string",
            "stage_types": ["openshift"]
        },    
        "OPENSHIFT_CLUSTER_NORTH": {
            "required": true,
            "type": "string",
            "stage_types": ["openshift"],
            "regions": ["north"],
            "default": "openshift-cluster-north.com"
        },    
        "OPENSHIFT_CLUSTER_SOUTH": {
            "required": true,
            "type": "string",
            "stage_types": ["openshift"],
            "regions": ["south"],
            "default": "openshift-cluster-south.com"
        },    
        "OPENSHIFT_CLUSTER_EAST": {
            "required": true,
            "type": "string",
            "stage_types": ["openshift"],
            "regions": ["east"],
            "default": "openshift-cluster-east.com"
        },    
        "OPENSHIFT_CLUSTER_WEST": {
            "required": true,
            "type": "string",
            "stage_types": ["openshift"],
            "regions": ["west"],
            "default": "openshift-cluster-west.com"
        },    
        "OPENSHIFT_TOKEN_NORTH": {
            "required": true,
            "type": "secret",
            "stage_types": ["openshift"],            
            "regions": ["north"]
        },
        "OPENSHIFT_TOKEN_SOUTH": {
            "required": true,
            "type": "secret",
            "stage_types": ["openshift"],            
            "regions": ["south"]
        },
        "OPENSHIFT_TOKEN_EAST": {
            "required": true,
            "type": "secret",
            "stage_types": ["openshift"],            
            "regions": ["east"]            
        },
        "OPENSHIFT_TOKEN_WEST": {
            "required": true,
            "type": "secret",
            "stage_types": ["openshift"],            
            "regions": ["west"]
        }
    }
}
