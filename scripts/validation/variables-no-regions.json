{
    "global":{
        "APP_NAME": "myapp",
        "APP_PLATFORM": "edv",
        "OPENSHIFT_PREFIX": "${APP_PLATFORM}-${APP_NAME}",
        "OPENSHIFT_PROJECT": "${APP_PLATFORM}-${APP_NAME}-${APP_DEPLOY_ENV}"
    },
    "build":{
        "default":{
            "APP_BUILD_PATH": "src",
            "APP_BUILD_CONTEXT": ".",
            "APP_BUILD_TARGET": "runtime",
            "APP_BUILD_ARGS": "--build-arg=APP_NAME=${APP_NAME}"
        }
    },
    "deploy": {
        "dev":{
            "ASPNETCORE_ENVIRONMENT": "Development",
            "APP_DEPLOY_ENV": "dev",
            "APP_RUNTIME_ARGS": "-e APP_NAME=${APP_NAME} -e ASPNETCORE_ENVIRONMENT=${ASPNETCORE_ENVIRONMENT}"
        },
        "qa":{
            "ASPNETCORE_ENVIRONMENT": "QA",
            "APP_DEPLOY_ENV": "qa",
            "APP_RUNTIME_ARGS": "-e APP_NAME=${APP_NAME} -e ASPNETCORE_ENVIRONMENT=${ASPNETCORE_ENVIRONMENT}"
        },
        "stress":{
            "ASPNETCORE_ENVIRONMENT": "Stress",
            "APP_DEPLOY_ENV": "stress",
            "APP_RUNTIME_ARGS": "-e APP_NAME=${APP_NAME} -e ASPNETCORE_ENVIRONMENT=${ASPNETCORE_ENVIRONMENT}"
        },
        "prod":{
            "ASPNETCORE_ENVIRONMENT": "Prod",
            "APP_DEPLOY_ENV": "prod",
            "APP_RUNTIME_ARGS": "-e APP_NAME=${APP_NAME} -e ASPNETCORE_ENVIRONMENT=${ASPNETCORE_ENVIRONMENT}"
        }
    }
}
