{
    "global": {
        "APP_NAME": {
            "required": true,
            "type": "string",
            "default": "${COMMON_REPO_NAME}",
            "stage_types": ["container"]
        },
        "APP_PLATFORM":  {
            "required": true,
            "type": "string",
            "default": "${COMMON_PLATFORM}",
            "stage_types": ["container"]
        },
        "APP_REGISTRY_URL": {
            "required": true,
            "type": "string",
            "default": "myregistry.com",
            "stage_types": ["container"]
        },
        "PRE_SCRIPT": {
            "required": true,
            "type": "string",
            "default": "default.sh",
            "stage_types": ["default", "bash", "pwsh", "python", "go"]
        },
        "POST_SCRIPT": {
            "required": true,
            "type": "string",
            "default": "default.sh",
            "stage_types": ["default", "bash", "pwsh", "python", "go"]
        }
    },
    "build": {
        "APP_BUILD_PATH":  {
            "required": true,
            "type": "string",
            "default": "./src"
        },
        "APP_BUILD_CMD":  {
            "required": false,
            "type": "string",
            "default": "${COMMON_ECHO} Building...",
            "stage_types": ["linux", "windows"]
        },
        "APP_BUILD_SCRIPT":  {
            "required": true,
            "type": "string",
            "default": "default.sh",
            "stage_types": ["default", "bash", "pwsh", "python", "go"]
        },
        "APP_BUILD_ARGS":  {
            "required": true,
            "type": "string",
            "default": "build",
            "stage_types": ["default"]
        },
        "APP_DOCKERFILE":  {
            "required": true,
            "type": "string",
            "default": ".",
            "stage_types": ["container"]
        },
        "APP_BUILD_TARGET":  {
            "required": true,
            "type": "string",
            "default": "runtime",
            "stage_types": ["container"]
        },
        "PRE_SCRIPT_ARGS": {
            "required": true,
            "type": "string",
            "default": "pre-build",
            "stage_types": ["default"]
        },
        "POST_SCRIPT_ARGS": {
            "required": true,
            "type": "string",
            "default": "post-build",
            "stage_types": ["default"]
        }
    },
    "deploy": {
        "APP_DEPLOY_CMD":  {
            "required": false,
            "type": "string",
            "default": "${COMMON_ECHO} Deploying...",
            "stage_types": ["linux", "windows"]
        },
        "APP_DEPLOY_SCRIPT":  {
            "required": true,
            "type": "string",
            "default": "default.sh",
            "stage_types": ["default", "bash", "pwsh", "python", "go"]
        },
        "APP_DEPLOY_ARGS":  {
            "required": true,
            "type": "string",
            "default": "deploy",
            "stage_types": ["default"]
        },
        "APP_RUNTIME_ARGS": {
            "required": true,
            "default": "default_test",
            "type": "string"
        },
        "OPENSHIFT_PREFIX": {
            "required": true,
            "type": "string",
            "default": "${APP_PLATFORM}-${APP_NAME}",
            "stage_types": ["openshift"]
        },
        "OPENSHIFT_PROJECT": {
            "required": true,
            "type": "string",
            "default": "${APP_PLATFORM}-${APP_NAME}-${APP_DEPLOY_ENV}",
            "stage_types": ["openshift"]
        },
        "PRE_SCRIPT_ARGS": {
            "required": true,
            "type": "string",
            "default": "pre-deploy",
            "stage_types": ["default"]
        },
        "POST_SCRIPT_ARGS": {
            "required": true,
            "type": "string",
            "default": "post-deploy",
            "stage_types": ["default"]
        }    
    },
    "regions": {
        "north": {
            "OPENSHIFT_CLUSTER_NORTH": {
                "required": true,
                "type": "string",
                "default": "${APP_DEPLOY_ENV}-north.openshift-cluster.com",
                "stage_types": ["openshift"]
            },    
            "OPENSHIFT_TOKEN_NORTH": {
                "required": true,
                "type": "secret",
                "stage_types": ["openshift"]            
            }
        },
        "south":{
            "OPENSHIFT_CLUSTER_SOUTH": {
                "required": true,
                "type": "string",
                "default": "${APP_DEPLOY_ENV}-south.openshift-cluster.com",
                "stage_types": ["openshift"]
            },    
            "OPENSHIFT_TOKEN_SOUTH": {
                "required": true,
                "type": "secret",
                "stage_types": ["openshift"]
            }
        },
        "east":{
            "OPENSHIFT_CLUSTER_EAST": {
                "required": true,
                "type": "string",
                "default": "${APP_DEPLOY_ENV}-east.openshift-cluster.com",
                "stage_types": ["openshift"]
            },    
            "OPENSHIFT_TOKEN_EAST": {
                "required": true,
                "type": "secret",
                "stage_types": ["openshift"]   
            }
        },
        "west":{
            "OPENSHIFT_CLUSTER_WEST": {
                "required": true,
                "type": "string",
                "default": "${APP_DEPLOY_ENV}-west-openshift-cluster.com",
                "stage_types": ["openshift"]
            },    
            "OPENSHIFT_TOKEN_WEST": {
                "required": true,
                "type": "secret",
                "stage_types": ["openshift"]
            }
        }
    },
    "supported": {
        "scripts": {
            "default": "sh",
            "bash": "sh",
            "pwsh": "ps1",
            "python": "py",
            "javascript": "js",
            "go": "go"
        },
        "types":{
            "apps":["custom","dotnet","angular","react","django","flask"],
            "build": ["windows","linux","container"],
            "test": ["unit","smoke","coverage","accessibility","regression"],    
            "deploy": ["windows-server","linux-server","openshift","mulesoft","artifactory","scheduled"]
        }
    }    
}
