{
    "build_app_default": {
        "type": "container",
        "vars": {
            "APP_NAME": "myapp",
            "APP_PLATFORM": "edv",
            "APP_REGISTRY_URL": "myregistry.com",
            "PRE_SCRIPT": "custom.sh",
            "POST_SCRIPT": "custom.sh",
            "PRE_SCRIPT_ARGS": "pre-script",
            "POST_SCRIPT_ARGS": "post-script",
            "APP_BUILD_PATH": "./src",
            "APP_DOCKERFILE": ".",
            "APP_BUILD_TARGET": "runtime"
        }
    },
    "deploy_dev_east": {
        "type": "openshift",
        "vars": {
            "APP_NAME": "myapp",
            "APP_PLATFORM": "edv",
            "APP_REGISTRY_URL": "myregistry.com",
            "PRE_SCRIPT": "whatever.ps1",
            "POST_SCRIPT": "custom.sh",
            "PRE_SCRIPT_ARGS": "pre-script",
            "POST_SCRIPT_ARGS": "post-script",
            "APP_RUNTIME_ARGS": "-e APP_NAME=${APP_NAME} -e ASPNETCORE_ENVIRONMENT=${ASPNETCORE_ENVIRONMENT}",
            "DEPLOY_ENV": "${ENV}",
            "OPENSHIFT_PREFIX": "${APP_PLATFORM}-${APP_NAME}",
            "OPENSHIFT_PROJECT": "${APP_PLATFORM}-${APP_NAME}-${APP_DEPLOY_ENV}",
            "ASPNETCORE_ENVIRONMENT": "Development",
            "OPENSHIFT_CLUSTER_EAST": "${APP_DEPLOY_ENV}-east.openshift-cluster.com",
            "OPENSHIFT_TOKEN_EAST": "$(OPENSHIFT_TOKEN_DEV_E1)",
            "API_KEY": "$(API_KEY_DEV)"
        }
    },
