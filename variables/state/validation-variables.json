{
    "global": {
        "common":{
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.sh"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.sh"
            }
        },
        "powershell":{
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.ps1"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.ps1"
            }
        },
        "python":{
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.py"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.py"
            }
        }
    },
    "build": {
        "common":{
            "APP_BUILD_PATH":  {
                "required": true,
                "type": "string",
                "default": "./src"
            },
            "PRE_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "pre-build"
            },
            "POST_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "post-build"
            }
        },
        "container":{
            "APP_NAME":  {
                "required": true,
                "type": "string"
            },
            "APP_PLATFORM":  {
                "required": true,
                "type": "string"
            },
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "-e APP_NAME=${APP_NAME}"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_PROCESS_SCRIPTS}/build-container.sh"
            },
            "APP_DOCKERFILE":  {
                "required": true,
                "type": "string",
                "default": "."
            },
            "APP_BUILD_TARGET":  {
                "required": true,
                "type": "string",
                "default": "runtime"
            }
        },
        "default":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "default.sh"
            }
        },
        "bash":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "default.sh"
            }
        },
        "powershell":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "default.ps1"
            }
        },
        "python":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "default.py"
            }
        },
        "dotnet":{
            "APP_DOTNET_VARIABLE":  {
                "required": true,
                "type": "string",
                "default": "DOTNET_BUILD"
            }
        }
    },
    "deploy": {
        "common":{
            "PRE_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "pre-deploy"
            },
            "POST_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "post-deploy"
            },    
            "APP_RUNTIME_ARGS":  {
                "required": true,
                "type": "string",
                "default": "running"
            }
        },
        "default":{
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            },
            "APP_DEPLOY_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "default.sh"
            }
        },
        "bash":{
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            },
            "APP_DEPLOY_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "default.sh"
            }
        },
        "powershell":{
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            },
            "APP_DEPLOY_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "default.ps1"
            }
        },
        "python":{
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            },
            "APP_DEPLOY_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "default.py"
            }
        },
        "openshift":{
            "APP_DEPLOY_COMMAND":  {
                "required": false,
                "type": "string",
                "default": "${COMMON_ECHO} Deploying..."
            },
            "APP_DEPLOY_ARGS":  {
                "required": false,
                "type": "string",
                "default": "${COMMON_ECHO} Deploying..."
            },
            "OPENSHIFT_PREFIX": {
                "required": true,
                "type": "string",
                "default": "${APP_PLATFORM}-${APP_NAME}"
            },
            "OPENSHIFT_PROJECT": {
                "required": true,
                "type": "string",
                "default": "${APP_PLATFORM}-${APP_NAME}-${APP_DEPLOY_ENV}"
            },
            "OPENSHIFT_TOKEN": {
                "required": true,
                "type": "secret"
            }
        }
    },
    "regions": {
        "north": {
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${APP_DEPLOY_ENV}-north.openshift-cluster.com"
                }
            }
        },
        "south":{
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${APP_DEPLOY_ENV}-south.openshift-cluster.com"
                }    
            }
        },
        "east":{
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${APP_DEPLOY_ENV}-east.openshift-cluster.com"
                }
            }
        },
        "west":{
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${APP_DEPLOY_ENV}-west-openshift-cluster.com"
                }
            }
        }
    }
}
