{
    "global": {
        "common":{
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.sh"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.sh"
            },
            "APP_COMMAND_INT": {
                "required": true,
                "type": "string",
                "default": "bash -c"
            }
        },
        "powershell":{
            "APP_COMMAND_INT": {
                "required": true,
                "type": "string",
                "default": "pwsh"
            },
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.ps1"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.ps1"
            }
        },
        "python":{
            "APP_COMMAND_INT": {
                "required": true,
                "type": "string",
                "default": "python"
            },
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.py"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.py"
            }
        }
    },
    "build": {
        "common":{
            "APP_BUILD_PATH":  {
                "required": true,
                "type": "string",
                "default": "./src"
            },
            "PRE_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "pre-build"
            },
            "POST_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "post-build"
            }
        },
        "container":{
            "APP_NAME":  {
                "required": true,
                "type": "string"
            },
            "APP_PLATFORM":  {
                "required": true,
                "type": "string"
            },
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "${REGISTRY_URL}/${APP_PLATFORM}/${APP_NAME}:${CDP_COMMIT_SHA} -f ${APP_DOCKERFILE}"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_PROCESS_SCRIPTS}/build-push-image.sh"
            },
            "APP_DOCKERFILE":  {
                "required": true,
                "type": "string",
                "default": "."
            },
            "APP_BUILD_TARGET":  {
                "required": true,
                "type": "string",
                "default": "runtime"
            },
            "REGISTRY_URL":  {
                "required": true,
                "type": "string",
                "default": "myregistry.com"
            }
        },
        "default":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.sh"
            }
        },
        "bash":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.sh"
            }
        },
        "powershell":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.ps1"
            }
        },
        "python":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.py"
            }
        },
        "dotnet":{
            "APP_DOTNET_VARIABLE":  {
                "required": true,
                "type": "string",
                "default": "DOTNET_BUILD"
            }
        }
    },
    "deploy": {
        "common":{
            "PRE_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "pre-deploy"
            },
            "POST_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "post-deploy"
            },    
            "APP_RUNTIME_ARGS":  {
                "required": true,
                "type": "string",
                "default": "running"
            }
        },
        "default":{
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            },
            "APP_DEPLOY_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.sh"
            }
        },
        "bash":{
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            },
            "APP_DEPLOY_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.sh"
            }
        },
        "powershell":{
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            },
            "APP_DEPLOY_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.ps1"
            }
        },
        "python":{
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            },
            "APP_DEPLOY_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_DEFAULT_SCRIPTS}/default.py"
            }
        },
        "openshift":{
            "OPENSHIFT_PREFIX": {
                "required": true,
                "type": "string",
                "default": "${APP_PLATFORM}-${APP_NAME}"
            },
            "OPENSHIFT_PROJECT": {
                "required": true,
                "type": "string",
                "default": "${APP_PLATFORM}-${APP_NAME}-${ENV}"
            },
            "OPENSHIFT_TOKEN": {
                "required": true,
                "type": "secret"
            },
            "APP_DEPLOY_ARGS":  {
                "required": false,
                "type": "string",
                "default": "--cluster=${OPENSHIFT_CLUSTER}"
            },
            "APP_DEPLOY_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "${CDP_PROCESS_SCRIPTS}/deploy-openshift.sh"
            }
        }
    },
    "regions": {
        "north": {
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${ENV}-north.openshift-cluster.com"
                }
            }
        },
        "south":{
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${ENV}-south.openshift-cluster.com"
                }    
            }
        },
        "east":{
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${ENV}-east.openshift-cluster.com"
                }
            }
        },
        "west":{
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${ENV}-west-openshift-cluster.com"
                }
            }
        }
    }
}
