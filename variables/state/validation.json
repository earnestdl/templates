{
    "global": {
        "APP_NAME": {
            "required": true,
            "type": "string",
            "default": "${CD_REPO_NAME}"
        },
        "APP_PLATFORM":  {
            "required": true,
            "type": "string",
            "default": "${CDP_PLATFORM}"
        },
        "APP_REGISTRY_URL": {
            "required": true,
            "type": "string",
            "default": "myregistry.com"
        }
    },
    "build": {
        "APP_BUILD_PATH":  {
            "required": false,
            "type": "string"
        },
        "APP_DOCKERFILE":  {
            "required": true,
            "type": "string",
            "stage_types": ["container"],
            "default": "."
        },
        "APP_BUILD_TARGET":  {
            "required": true,
            "type": "string",
            "stage_types": ["container"],
            "default": "runtime"
        },
        "APP_BUILD_ARGS":  {
            "required": false,
            "type": "string"
        }
    },
    "deploy": {
        "APP_RUNTIME_ARGS": {
            "required": false,
            "default": "default_test",
            "type": "string"
        },
        "OPENSHIFT_PREFIX": {
            "required": true,
            "type": "string",
            "stage_types": ["openshift"]
        },
        "OPENSHIFT_PROJECT": {
            "required": true,
            "type": "string",
            "stage_types": ["openshift"]
        }    
    },
    "regions": {
        "north": {
            "OPENSHIFT_CLUSTER_NORTH": {
                "required": true,
                "type": "string",
                "stage_types": ["openshift"],
                "default": "${APP_DEPLOY_ENV}-north.openshift-cluster.com"
            },    
            "OPENSHIFT_TOKEN_NORTH": {
                "required": true,
                "type": "secret",
                "stage_types": ["openshift"]            
            }
        },
        "south":{
            "OPENSHIFT_CLUSTER_SOUTH": {
                "required": true,
                "type": "string",
                "stage_types": ["openshift"],
                "default": "${APP_DEPLOY_ENV}-south.openshift-cluster.com"
            },    
            "OPENSHIFT_TOKEN_SOUTH": {
                "required": true,
                "type": "secret",
                "stage_types": ["openshift"]
            }
        },
        "east":{
            "OPENSHIFT_CLUSTER_EAST": {
                "required": true,
                "type": "string",
                "stage_types": ["openshift"],
                "default": "${APP_DEPLOY_ENV}-east.openshift-cluster.com"
            },    
            "OPENSHIFT_TOKEN_EAST": {
                "required": true,
                "type": "secret",
                "stage_types": ["openshift"]   
            }
        },
        "west":{
            "OPENSHIFT_CLUSTER_WEST": {
                "required": true,
                "type": "string",
                "stage_types": ["openshift"],
                "default": "${APP_DEPLOY_ENV}-west-openshift-cluster.com"
            },    
            "OPENSHIFT_TOKEN_WEST": {
                "required": true,
                "type": "secret",
                "stage_types": ["openshift"]
            }
        }
    }    
}
