{
    "global": {
        "common":{
            "GLOBAL_VAR_FROM_VALIDATION": {
                "required": true,
                "type": "string",
                "default": "global from validation should go in all stages"
            }
        },
        "default":{
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.sh"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.sh"
            }
        },
        "bash":{
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.sh"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.sh"
            }
        },
        "pwsh":{
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.ps1"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.ps1"
            }
        },
        "python":{
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.py"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.py"
            }
        },
        "go":{
            "PRE_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.go"
            },
            "POST_SCRIPT": {
                "required": true,
                "type": "string",
                "default": "default.go"
            }
        }
    },
    "build": {
        "common":{
            "APP_BUILD_PATH":  {
                "required": true,
                "type": "string",
                "default": "./src"
            },
            "PRE_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "pre-build"
            },
            "POST_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "post-build"
            },
            "REQUIRED_COMMON_BUILD_VAR": {
                "required": true,
                "type": "string"
            }        },
        "container":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "-e APP_NAME=${APP_NAME}"
            },
            "APP_BUILD_COMMAND":  {
                "required": true,
                "type": "string",
                "default": "./build-container.sh"
            },
            "APP_DOCKERFILE":  {
                "required": true,
                "type": "string",
                "default": "."
            },
            "APP_BUILD_TARGET":  {
                "required": true,
                "type": "string",
                "default": "runtime"
            },
            "REQUIRED_CONTAINER_BUILD_VAR": {
                "required": true,
                "type": "string"
            }
        },
        "default":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.sh"
            },
            "REQUIRED_DEFAULT_BUILD_VAR": {
                "required": true,
                "type": "string"
            }
        },
        "bash":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.sh"
            }
        },
        "pwsh":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.ps1"
            }
        },
        "python":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.py"
            }
        },
        "go":{
            "APP_BUILD_ARGS":  {
                "required": true,
                "type": "string",
                "default": "build"
            },
            "APP_BUILD_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.go"
            }
        }
    },
    "deploy": {
        "common":{
            "PRE_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "pre-deploy"
            },
            "POST_SCRIPT_ARGS": {
                "required": true,
                "type": "string",
                "default": "post-deploy"
            },    
            "APP_RUNTIME_ARGS":  {
                "required": true,
                "type": "string",
                "default": "running"
            },
            "REQUIRED_COMMON_DEPLOY_VAR": {
                "required": true,
                "type": "string"
            }
        },
        "default":{
            "APP_DEPLOY_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.sh"
            },
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            },
            "REQUIRED_DEFAULT_DEPLOY_VAR": {
                "required": true,
                "type": "string"
            }
        },
        "bash":{
            "APP_DEPLOY_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.sh"
            },
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            }
        },
        "pwsh":{
            "APP_DEPLOY_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.ps1"
            },
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            }
        },
        "python":{
            "APP_DEPLOY_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.py"
            },
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            }
        },
        "go":{
            "APP_DEPLOY_SCRIPT":  {
                "required": true,
                "type": "string",
                "default": "default.py"
            },
            "APP_DEPLOY_ARGS":  {
                "required": true,
                "type": "string",
                "default": "deploy"
            }
        },
        "openshift":{
            "APP_DEPLOY_COMMAND":  {
                "required": false,
                "type": "string",
                "default": "${COMMON_ECHO} Deploying..."
            },
            "APP_DEPLOY_ARGS":  {
                "required": false,
                "type": "string",
                "default": "${COMMON_ECHO} Deploying..."
            },
            "OPENSHIFT_PREFIX": {
                "required": true,
                "type": "string",
                "default": "${APP_PLATFORM}-${APP_NAME}"
            },
            "OPENSHIFT_PROJECT": {
                "required": true,
                "type": "string",
                "default": "${APP_PLATFORM}-${APP_NAME}-${APP_DEPLOY_ENV}"
            },
            "OPENSHIFT_TOKEN": {
                "required": true,
                "type": "secret"
            },
            "REQUIRED_OPENSHIFT_DEPLOY_VAR": {
                "required": true,
                "type": "string"
            }
        }
    },
    "regions": {
        "north": {
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${APP_DEPLOY_ENV}-north.openshift-cluster.com"
                }
            }
        },
        "south":{
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${APP_DEPLOY_ENV}-south.openshift-cluster.com"
                }    
            }
        },
        "east":{
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${APP_DEPLOY_ENV}-east.openshift-cluster.com"
                },
                "OPENSHIFT_REGION_EAST_REQUIRED": {
                    "required": true,
                    "type": "string"
                }
            }
        },
        "west":{
            "openshift":{
                "OPENSHIFT_CLUSTER": {
                    "required": true,
                    "type": "string",
                    "default": "${APP_DEPLOY_ENV}-west-openshift-cluster.com"
                }
            }
        }
    },
    "supported": {
        "scripts": {
            "default": "sh",
            "bash": "sh",
            "pwsh": "ps1",
            "python": "py",
            "javascript": "js",
            "go": "go"
        },
        "types":{
            "apps":["custom","dotnet","angular","react","django","flask"],
            "build": ["windows","linux","container"],
            "test": ["unit","smoke","coverage","accessibility","regression"],    
            "deploy": ["windows-server","linux-server","openshift","mulesoft","artifactory","scheduled"]
        }
    }    
}
